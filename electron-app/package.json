{
  "name": "nameless-pos-desktop",
  "productName": "Nameless.POS",
  "version": "1.0.0",
  "description": "Nameless.POS Desktop Application",
  "main": "main.js",
  "author": {
    "name": "Nameless.POS",
    "email": "support@namelesspos.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:portable": "electron-builder --win portable",
    "build:win:nsis": "electron-builder --win nsis",
    "dist": "npm run build"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.namelesspos.desktop",
    "productName": "Nameless.POS",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "updater.html",
      "package.json"
    ],
                "win": {
                  "target": [
                    {
                      "target": "nsis",
                      "arch": [
                        "x64"
                      ]
                    },
                    {
                      "target": "portable",
                      "arch": [
                        "x64"
                      ]
                    }
                  ],
                  "verifyUpdateCodeSignature": false
                },            "nsis": {
              "oneClick": false,
              "allowToChangeInstallationDirectory": true,
              "createDesktopShortcut": true,
              "createStartMenuShortcut": true,
              "shortcutName": "Nameless.POS",
              "include": "build/installer.nsh",
              "deleteAppDataOnUninstall": false
            },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "YOUR_REPO_NAME",
        "releaseType": "release"
      }
    ]
  }
}
