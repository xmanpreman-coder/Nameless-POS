{
    "name": "nameless-pos",
    "version": "1.0.0",
    "description": "Point of Sale System - Portable Desktop Application",
    "author": "Nameless Team",
    "license": "MIT",
    "main": "electron/main.js",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "dist": "electron-builder",
        "dist:portable": "electron-builder --win portable",
        "start": "electron ."
    },
    "devDependencies": {
        "@coreui/coreui": "^3.2.2",
        "@coreui/icons": "^1.0.1",
        "axios": "^1.13.2",
        "bootstrap": "^4.1.0",
        "electron": "^39.2.3",
        "electron-builder": "^26.0.12",
        "laravel-mix": "^6.0.6",
        "laravel-vite-plugin": "^0.7.8",
        "popper.js": "^1.12",
        "sass": "^1.15.2",
        "vite": "^4.4.7"
    },
    "dependencies": {
        "autoprefixer": "^10.3.1"
    },
    "build": {
        "appId": "com.nameless.pos",
        "productName": "Nameless POS",
        "files": [
            "electron/**/*",
            "public/**/*",
            "app/**/*",
            "Modules/**/*",
            "routes/**/*",
            "config/**/*",
            "bootstrap/**/*",
            "storage/**/*",
            "database/**/*",
            "vendor/**/*",
            ".env.production",
            "artisan",
            "package.json"
        ],
        "win": {
            "target": [
                "portable",
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Nameless POS"
        }
    },
    "type": "module"
}
