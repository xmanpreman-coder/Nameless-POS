{
    "name": "nameless-pos",
    "version": "1.0.0",
    "description": "Point of Sale System - Portable Desktop Application",
    "author": "Nameless Team",
    "license": "MIT",
    "main": "electron/main.js",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "dist": "electron-builder",
        "dist:portable": "electron-builder --win portable",
        "dist:nosigint": "node build-nosigint.js",
        "start": "electron ."
    },
    "devDependencies": {
        "@coreui/coreui": "^3.2.2",
        "@coreui/icons": "^1.0.1",
        "axios": "^1.13.2",
        "bootstrap": "^4.1.0",
        "electron": "^39.2.3",
        "electron-builder": "^26.0.12",
        "laravel-mix": "^6.0.6",
        "laravel-vite-plugin": "^0.7.8",
        "popper.js": "^1.12",
        "sass": "^1.15.2",
        "vite": "^4.4.7"
    },
    "dependencies": {
        "autoprefixer": "^10.3.1",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.6.2"
    },
    "build": {
        "appId": "com.nameless.pos",
        "productName": "Nameless POS",
        "files": [
            "electron/**/*",
            "node_modules/**/*"
        ],
        "extraFiles": [
            "app",
            "artisan",
            "bootstrap",
            "build/php",
            "config",
            "database",
            "Modules",
            "public",
            "resources",
            "routes",
            "storage",
            "vendor",
            ".env.production"
        ],
        "win": {
            "target": [
                "portable"
            ],
            "forceCodeSigning": false,
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Nameless POS"
        }
    },
    "type": "module"
}
