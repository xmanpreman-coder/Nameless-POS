{
  "name": "nameless-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --win --linux --mac",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.namelesspos.desktop",
    "productName": "Nameless POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "nameless-pos"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4"
  }
}
